{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDirs": ["src", "tests"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "#/*": ["./tests/*"]
    }
  },
  "include": ["src", "tests"]
}
